{
  "manifest_version": 3,
  "name": "Send Page HTML",
  "version": "1.2.0",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html", "default_title": "Send Page HTML" },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["contentScript.js"], "run_at": "document_idle" }
  ]
}
