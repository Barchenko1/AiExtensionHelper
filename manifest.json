{
  "manifest_version": 3,
  "name": "Send Page / Docs to Helper",
  "version": "1.1.0",
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "commands": {
    "trigger-capture": {
      "suggested_key": { "default": "Ctrl+Shift+X", "mac": "Command+Shift+X" },
      "description": "Send page innerText as text/plain (original method)"
    },
    "trigger-capture-html": {
      "suggested_key": { "default": "Ctrl+Shift+Z", "mac": "Command+Shift+Z" },
      "description": "Export Google Doc as HTML and send as text/html (second method)"
    }
  }
}
